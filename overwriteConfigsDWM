# --- dwm related configs ---

cd dwm2015

[[ -d "$HOME/source/dwm" ]]     &&  cp dwm/config.h ~/source/dwm/

[[ -d "$HOME/source/dmenu" ]]   &&  cp dmenu/config.h ~/source/dmenu/
 
# sudo here

set +x # verbosity off
echo
echo
echo "65% stupid, run at your own risk from now on:"

set -x # verbosity
sudo cp -rb usr/* /usr/ 




