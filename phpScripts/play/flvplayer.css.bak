form {
	

}

#notes { 
position: fixed;
right:5px;
bottom:15px;
background-color: #111;
font: 13px sans-serif;
z-index:10;
-webkit-box-shadow: 0px 0px 40px #000;
-moz-border-radius: 5px;
border-radius: 5px;

opacity:0.5;
filter:alpha(opacity=50);

text-align:left;
}

#notes_bottom_left { 
position: fixed;
left:5px;
bottom:5px;
background-color: #181818;
font: 13px sans-serif;
text-align:left;
opacity:0.0;
filter:alpha(opacity=00);
z-index:10;
}
#notes_bottom_left:hover {
opacity:0.9;
filter:alpha(opacity=90);
}

#notes_header { 
	margin-left: 30px;
}

#movie_notes { 
	width: 1024px;
	text-align: left;
	background-color: #181818;
	
margin:0 auto;
margin-top: 20px;

}

#thumbs {
margin: 0 auto;
text-align: left;
margin-bottom: 30px;

width: 80%;
/* height: 520px; */
/*overflow: auto; */

max-width:1150px;

}

iframe { 
border:1px solid #ffffff;

}

img {
border: 3px solid transparent;
}

a img {

  opacity:0.6;
  filter:alpha(opacity=60);
}

a img:hover {

  opacity:1.0;
  filter:alpha(opacity=99);
}

.dragclass{
position : relative;
cursor : move;
}

#big {

}

#stop { 
display: inline;

opacity:0.3;
filter:alpha(opacity=30);
}
#stop:hover {
opacity:0.7;
filter:alpha(opacity=90);
}





/* start glavna Navigacija */

a img.glavnaNavigacija {

  opacity:0.05;
  filter:alpha(opacity=5);
}

a img.glavnaNavigacija:hover {

  opacity:1.0;
  filter:alpha(opacity=99);
}

#glavnaNavigacijaContainer {
position:fixed; bottom:1px; text-align:center; width:100%;
}
#glavnaNavigacija {
background-color:transparent; margin: 0 auto; width:890px;  -moz-border-radius:5px; border-radius:5px; z-index:-1;
