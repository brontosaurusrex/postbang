#!/bin/bash

# kanConky < display a simple kanban board
# could be called from conky and should look usefull with
# non-monospaced fonts (like cuprum as well)

# example call from conky
# ${execpi 60 kanConky}

# action
cd ~/source/kanban-cli || exit

kan () {
ls -chtr "$@"
}

two="black"
one="#8B9CA3"

echo -n '${color '$one'}' # conky stuff
echo "Projekt"
echo -n '${color '$two'}'
kan 1_project
echo 
echo -n '${color '$one'}'
echo "Za Mix"
echo -n '${color '$two'}'
kan 2_readyForMix
echo
echo -n '${color '$one'}'
echo "Push"
echo -n '${color '$two'}'
kan 3_push
